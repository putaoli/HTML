
@{
    ViewBag.Title = "首页";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/Include/Easyui/jquery.min.js"></script>
    <script src="~/Include/Easyui/jquery.easyui.min.js"></script>
    <script src="~/Include/Easyui/locale/easyui-lang-zh_CN.js"></script>
    <link href="~/Include/Easyui/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/Include/Easyui/themes/icon.css" rel="stylesheet" />
    <script type="text/javascript">
        function AddTab(title, link) {
            //如果tabs容器里面存在相同标题的选项卡 则直接让这个选项选中
            if ($('#tt').tabs('exists', title)) {
                $('#tt').tabs('select', title);
            }
            else //如果不存在 则新增一个tabs 是一个iframe的页面
            {
                var html = '<iframe scrolling="auto" frameborder="0" src="' + link + '" style="width:100%;height:100%"></iframe>';
                $('#tt').tabs('add', { title: title, content: html, closable: true })
            }
        }

        /**/</script>
    <script>
        if (confirm("确认要打开该页面！"))
            alert("请先登录！");
    </script>
</head>
<body class="easyui-layout">

    <div data-options="region:'north',border:false" style="height:60px;background:#18a3c8;padding:10px;font-size:20px">北盟博客后台</div>
    <div data-options="region:'west',split:true,title:'导航'" style="width:150px;padding:10px;">
        <ul>
            <li>
                <a href="#" onclick="AddTab('博客配置','/manage/config');">博客配置</a>
            </li>
            <li>
                <a href="#" onclick="AddTab('新增栏目','/manage/catalogadd');">新增栏目</a>
            </li>
            <li>
                <a href="#" onclick="AddTab('栏目管理','/manage/catalogmanage');">栏目管理</a>
            </li>
            <li>
                <a href="#" onclick="AddTab('博文管理','/manage/blogmanage');">博文管理</a>
            </li>
            <li>
                <a href="#" onclick="AddTab('新增博文','/manage/blogadd');">新增博文</a>
            </li>
        </ul>
    </div>
    <div data-options="region:'south',border:false" style="height:20px;background:#d8d8d8;padding:2px 5px;">北盟博客 @DateTime.Now.Year bamn.cn</div>
    <div data-options="region:'center'" id="tt" class="easyui-tabs">
    </div>

</body>
</html>
